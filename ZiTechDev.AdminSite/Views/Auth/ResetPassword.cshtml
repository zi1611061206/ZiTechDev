@model ZiTechDev.CommonModel.Requests.Auth.ResetPasswordRequest
@{
    ViewData["Title"] = ViewBag.Title;
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header">
                    <img class="logo-md card-img img-thumbnail bg-dark shadow-lg" src="~/img/logo.jpg" />
                    <h3 class="text-center font-weight-light my-4">@ViewBag.Title</h3>
                </div>
                <div class="card-body">
                    <form asp-controller="Auth" asp-action="ResetPassword" method="post">
                        <div class="form-group text-center">
                            <div class="summary-error bg-danger text-white" asp-validation-summary="ModelOnly"></div>
                        </div>
                        <div class="form-group" hidden>
                            <label asp-for="UserNameOrEmail" class="control-label"></label>
                            <span class="text-danger"> (*)</span>
                            <input class="form-control py-4" type="text" asp-for="UserNameOrEmail" />
                            <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
                        </div>
                        <div class="form-group" hidden>
                            <label asp-for="Token" class="control-label"></label>
                            <span class="text-danger"> (*)</span>
                            <input class="form-control py-4" type="text" asp-for="Token" />
                            <span asp-validation-for="Token" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Password" class="control-label"></label>
                            <span class="text-danger"> (*)</span>
                            <div class="input-group">
                                <input id="_password" class="form-control py-4" type="password" asp-for="Password" />
                                <div class="input-group-append">
                                    <span class="input-group-text">
                                        <a href="#">
                                            <i onclick="ShowHidePW('password')" id="password" class="fa fa-eye" aria-hidden="true"></i>
                                        </a>
                                    </span>
                                </div>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="PasswordConfirmation" class="control-label"></label>
                            <span class="text-danger"> (*)</span>
                            <div class="input-group">
                                <input id="_password-confirmation" class="form-control py-4" type="password" asp-for="PasswordConfirmation" />
                                <div class="input-group-append">
                                    <span class="input-group-text">
                                        <a href="#">
                                            <i onclick="ShowHidePW('password-confirmation')" id="password-confirmation" class="fa fa-eye" aria-hidden="true"></i>
                                        </a>
                                    </span>
                                </div>
                            </div>
                            <span asp-validation-for="PasswordConfirmation" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary w-100" type="submit">Lưu</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript" src="/js/Auth/reset-password.js" defer></script>
}
