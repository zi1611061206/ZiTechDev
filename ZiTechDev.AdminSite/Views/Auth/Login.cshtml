@using ZiTechDev.CommonModel.Requests.Auth
@model LoginRequest
@{
    ViewData["Title"] = ViewBag.Title;
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header text-center">
                    <img class="logo-md card-img img-thumbnail bg-dark shadow-lg" src="~/img/logo.jpg" />
                    <h3 class="font-weight-light my-4">@ViewBag.Title</h3>
                </div>
                <div class="card-body">

                    <form asp-controller="Auth" asp-action="Login" method="post">

                        <div class="form-group text-center">
                            <div class="summary-error bg-danger text-white" asp-validation-summary="ModelOnly"></div>
                        </div>

                        <div class="form-group text-center">
                            <a class="btn btn-sm px-5 btn-outline-dark" href="@Url.ActionLink("LoginUserName", "Auth", new { userName = Model.UserName })" role="button">
                                <img class="avatar-sm" src="~/img/logo.jpg" />
                                @Model.UserName
                                <input class="form-control py-4" type="text" asp-for="UserName" readonly hidden />
                            </a>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Password" class="control-label"></label>
                            <span class="text-danger"> (*)</span>
                            <div class="input-group">
                                <input id="_password" class="form-control py-4" type="password" placeholder="Nhập mật khẩu" asp-for="Password" />
                                <div class="input-group-append">
                                    <span class="input-group-text">
                                        <a href="#">
                                            <i onclick="ShowHidePW('password')" id="password" class="fa fa-eye" aria-hidden="true"></i>
                                        </a>
                                    </span>
                                </div>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <div class="custom-control custom-checkbox">
                                <input class="custom-control-input" asp-for="RememberMe" type="checkbox" />
                                <label class="custom-control-label" asp-for="RememberMe">Ghi nhớ tôi</label>
                                <span asp-validation-for="RememberMe" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                            <button class="btn btn-primary w-100" type="submit">Tiếp theo</button>
                        </div>

                        <div class="form-group d-flex justify-content-center mt-4 mb-0">
                            <a class="small" href="/Auth/ForgotPassword">Quên mật khẩu?</a>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript" src="/js/Auth/login.js" defer></script>
}