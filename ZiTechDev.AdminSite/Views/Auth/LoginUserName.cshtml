@using ZiTechDev.CommonModel.Requests.Auth
@model LoginUserNameRequest
@{
    ViewData["Title"] = ViewBag.Title;
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header text-center">
                    <img class="logo-md card-img img-thumbnail bg-dark shadow-lg" src="~/img/logo.jpg" />
                    <h3 class="font-weight-light my-4">@ViewBag.Title</h3>
                </div>
                <div class="card-body">

                    <form asp-controller="Auth" asp-action="LoginUserName" method="post">

                        <div class="form-group text-center">
                            <div class="summary-error bg-danger text-white" asp-validation-summary="ModelOnly"></div>
                        </div>

                        <div class="form-group">
                            <label asp-for="UserNameOrEmail" class="control-label"></label>
                            <span class="text-danger"> (*)</span>
                            <input class="form-control py-4" type="text" placeholder="Nhập tên đăng nhập" asp-for="UserNameOrEmail" />
                            <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
                        </div>

                        <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                            <button class="btn btn-primary w-100" type="submit">Tiếp theo</button>
                        </div>

                        <div class="form-group d-flex justify-content-center mt-4 mb-0">
                            <a class="small" href="/Auth/Register">Chưa có tài khoản?</a>
                        </div>

                    </form>

                    <hr />

                    <a href="#" class="btn btn-outline-danger w-100 m-1">
                        <img src="~/img/google_logo.png" class="logo">
                        Đăng nhập bằng tài khoản Google
                    </a>
                    <a href="#" class="btn btn-outline-primary w-100 m-1">
                        <img src="~/img/facebook-logo.jpg" class="logo">
                        Đăng nhập bằng tài khoản Facebook
                    </a>

                </div>
            </div>
        </div>
    </div>
</div>