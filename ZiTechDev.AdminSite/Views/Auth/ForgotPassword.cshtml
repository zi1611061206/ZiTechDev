@model ZiTechDev.CommonModel.Requests.Auth.ForgotPasswordRequest
@{
    ViewData["Title"] = ViewBag.Title;
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">@ViewBag.Title</h3></div>
                <div class="card-body">
                    @if (ViewBag.Success != null)
                    {
                        <div class="alert alert-success text-center" role="alert">
                            @ViewBag.Success
                        </div>
                    }
                    <form asp-controller="Auth" asp-action="ForgotPassword" method="post">
                        <div class="form-group text-center">
                            <div class="summary-error bg-danger text-white" asp-validation-summary="ModelOnly"></div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <span class="text-danger"> (*)</span>
                            <input class="form-control py-4" type="text" placeholder="Nhập tên đăng nhập" asp-for="Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                            @{
                                if (ViewBag.Success != null)
                                {
                                    <button class="btn btn-primary w-100" type="submit">Gửi lại</button>
                                }
                                else
                                {
                                    <button class="btn btn-primary w-100" type="submit">Gửi</button>
                                }
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

