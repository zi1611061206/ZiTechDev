
@model ZiTechDev.CommonModel.Requests.Profile.AuthenticateCodeRequest
@{
    ViewData["Title"] = ViewBag.Title;
    Layout = "~/Views/Shared/_ProfileLayout.cshtml";
}

<hr />
<div class="container">
    <div class="card mb-4 bg-light">
        <h1 class="card-header text-center text-uppercase">@ViewBag.Title</h1>
        <div class="card-body justify-content-center">

            <form asp-controller="Profile" asp-action="Disable2FA" method="post">
                <div class="form-group text-center">
                    <div class="summary-error bg-danger text-white" asp-validation-summary="ModelOnly"></div>
                </div>

                <div class="form-group">
                    <label asp-for="PinCode" class="control-label"></label>
                    <span class="text-danger"> (*)</span>
                    <input asp-for="PinCode" class="form-control" />
                    <span asp-validation-for="PinCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Gửi" class="btn btn-primary w-100" />
                </div>
            </form>

        </div>
    </div>
</div>

